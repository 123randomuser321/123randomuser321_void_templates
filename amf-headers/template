archs="x86_64"
wrksrc=AMF-${version}
build_style=meta
short_desc="GPUOpen Advanced Media Framework headers"
maintainer="Sembo Sadur <labmailssadur@gmail.com>"
license="MIT"
homepage="https://gpuopen.com/"
distfiles="https://github.com/GPUOpen-LibrariesAndSDKs/AMF/archive/refs/tags/v${version}.tar.gz"
checksum=7c8a5c91bca54e257258e4efcc61925921f2efe432efd34cf77dd9dc1803c38a


do_install() {
	
	mkdir -p ${DESTDIR}/usr/include/AMF # Handbrake uses this path
	cp -r amf/public/include/* ${DESTDIR}/usr/include/AMF
	
	vlicense LICENSE.txt

}
